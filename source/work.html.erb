<% content_for(:title, "Our work") %>

<section class="work">
  <h1>Our work</h1>
  <ul class="work-list">
    <% data.work_items.client.each_with_index do |client, index| %>
      <li>
        <% link_to("/work/#{client.link}") do %>
          <%= image_tag(client.image_thumb, :alt => "") %>
          <h2><%= client.name %></h2>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>